
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  nombre      String
  clave       String
  email       String  @unique
  descripcion String?

}

model Email {
  id          Int     @id @default(autoincrement())
  remitente_id   Int
  destinatario_id Int
  asunto     String
  cuerpo      String
  es_favorita Boolean @default(false)

}

model Bloqueados {
  id         Int     @id @default(autoincrement())
  usuario    Int
  direccion_bloqueada  String
  direccion_usuario String
}

model Favoritos {
  id         Int     @id @default(autoincrement())
  usuario    Int
  direccion_favorita  String
  direccion_usuario String
}